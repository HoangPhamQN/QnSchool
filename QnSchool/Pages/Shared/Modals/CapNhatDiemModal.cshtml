<div class="modal fade" id="CapNhatDiemModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Chỉnh sửa điểm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form onsubmit="capNhatDiemTrungBinh(event)">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <span class="text-danger" id="validationMessage"></span>
                    <input type="hidden" id="StudentId"/>
                    <input type="hidden" id="SubjectId"/>
                    <div class="form-group mb-2">
                        <label class="control-label mb-1">Họ và tên</label>
                        <input type="text" class="form-control" placeholder="9" id="studentName" readonly/>
                    </div>
                    <div class="form-group mb-2">
                        <label class="control-label mb-1">Điểm trung bình</label>
                        <input type="number" class="form-control" placeholder="9" id="averange" min="0" max="10" oninput="validateAverange()" />
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">   
            </div>
        </div>
    </div>
</div>
